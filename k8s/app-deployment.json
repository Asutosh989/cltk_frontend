{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "cltk-deployment",
    "labels": {
      "name": "cltk-deployment"
    }
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name": "cltk-pod"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "cltk-container",
            "image": "us.gcr.io/archimedes-01201/cltk:NEW_IMAGE_TAG",
            "env": [
              {
                "name": "NODE_ENV",
                "value": "production"
              },
              {
                "name": "SESSION_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "secrets",
                    "key": "session"
                  }
                }
              },
              {
                "name": "JWT_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "secrets",
                    "key": "jwt"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
