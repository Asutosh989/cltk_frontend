{
	"kind":"Deployment",
	"apiVersion":"extensions/v1beta1",
	"metadata": {
		"name":"cltk-frontend-dep",
		"labels": {
			"name":"cltk-frontend-dep"
		}
	},
	"spec":{
		"replicas": 1,
		"template": {
			"metadata": {
				"labels": {
					"name":"cltk-frontend-pod"
				}
			},
			"spec": {
				"containers": [
					{
						"name": "cltk-frontend-cont",
						"image": "us.gcr.io/archimedes-01201/cltk_app:latest",
						"ports": [
							{
								"name": "http-server",
								"containerPort": 3000
							}
						],
						"env": [
							{
								"name": "HTTP_FORWARDED_COUNT",
								"value"  :  "1"
							},
							{
								"name": "MONGO_URL",
								"value": "mongodb://localhost/cltkDev"
							},
							{
								"name": "ROOT_URL",
								"value": "http://archive-dev.cltk.org"
							},
							{
								"name": "UPLOAD_TMP",
								"value": "/tmp/uploads"
							}
						]
					}
				]
			}
		}
	}
}
